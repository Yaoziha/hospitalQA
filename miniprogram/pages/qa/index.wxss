/* pages/qa/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.search-box {
  display: flex;
  margin-bottom: 40rpx;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.input-container {
  width: 70%;
  background-color: #fff;
  border-radius: 10rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
}

.search-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-box .search-btn {
  width: 17%;
  height: 80rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-left: 3% !important;
  margin-right: auto;
  padding: 0;
  box-sizing: border-box;
}

.search-box .clear-btn {
  width: 8%;
  height: 80rpx;
  background-color: #f6f6f6;
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-left: 2% !important;
  margin-right: 0 !important;
  padding: 0;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.common-questions {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.question-list {
  display: flex;
  flex-direction: column;
}

.question-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.question-item:last-child {
  border-bottom: none;
}

.admin-btn {
  text-align: center;
  margin-top: 40rpx;
  color: #07C160;
  font-size: 28rpx;
}

.answer-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.answer-content {
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}

.answer-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.answer-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.close-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
}

/* 重置按钮的默认样式 */
button::after {
  border: none;
}

/* 授权弹窗样式 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.auth-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.auth-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.auth-buttons {
  display: flex;
  justify-content: space-between;
  
}

.auth-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
    display: flex;
  justify-content: center;
  align-items: center;
}

.auth-btn.cancel {
  background-color: #f6f6f6;
  color: #666;
}

.auth-btn.confirm {
  background-color: #07C160;
  color: #fff;
} 