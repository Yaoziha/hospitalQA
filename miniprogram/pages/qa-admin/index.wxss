/* pages/qa-admin/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.qa-list {
  display: flex;
  flex-direction: column;
}

.qa-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.qa-content {
  margin-bottom: 20rpx;
}

.qa-question {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.qa-answer {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.qa-keywords {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.keyword-label {
  margin-right: 10rpx;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.keyword {
  background-color: #f0f0f0;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.qa-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.edit {
  background-color: #f0f0f0;
  color: #333;
}

.delete {
  background-color: #ff4d4f;
  color: #fff;
}

.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.form-content {
  width: 90%;
  max-height: 90vh;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  overflow-y: auto;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.keyword-input-box {
  display: flex;
  margin-bottom: 20rpx;
}

.keyword-input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.keyword-add-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  margin-left: 20rpx;
  border-radius: 6rpx;
}

.keyword-delete {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #ff4d4f;
}

.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.form-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
}

.cancel {
  background-color: #f0f0f0;
  color: #333;
}

.submit {
  background-color: #07C160;
  color: #fff;
} 