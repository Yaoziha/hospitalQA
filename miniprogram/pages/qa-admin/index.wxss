/* pages/qa-admin/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 添加非管理员提示样式 */
.no-permission {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-top: 30rpx;
}

.no-permission-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  color: #999;
}

.no-permission-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.permission-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin-left: 30rpx !important;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.qa-list {
  margin-bottom: 40rpx;
}

.qa-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.qa-content {
  margin-bottom: 20rpx;
}

.qa-question {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.qa-answer {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
  word-break: break-all;
}

.qa-keywords {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 20rpx;
}

.keyword-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.keyword {
  background-color: #f0f9f4;
  color: #07C160;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.qa-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.action-btn {
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.edit {
  background-color: #f0f9f4;
  color: #07C160;
}

.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.form-content {
  width: 85%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 200rpx;
  color: #333;
}

.keyword-input-box {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.keyword-input {
  flex: 1;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  height: 70rpx;
  box-sizing: border-box;
}

.keyword-add-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.keyword-delete {
  margin-left: 10rpx;
  color: #ff4d4f;
  font-weight: bold;
  font-size: 28rpx;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.form-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
}

.cancel {
  background-color: #f6f6f6;
  color: #666;
}

.submit {
  background-color: #07C160;
  color: #fff;
}

/* 重置按钮的默认样式 */
button::after {
  border: none;
} 