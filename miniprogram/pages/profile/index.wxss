.container {
  padding: 30rpx;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.avatar-container {
  margin-bottom: 20rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.user-details {
  text-align: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.login-btn, .phone-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.phone-btn {
  background-color: #f6f6f6;
  color: #333;
  border: 1px solid #ddd;
}

/* 管理员功能区域 */
.admin-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width:90vw;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

/* 用户列表 */
.user-list {
  margin-bottom: 30rpx;
}

.list-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.header-item {
  flex: 1;
  text-align: center;
}

.user-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
}

.user-item-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.user-item-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
  background-color: #f0f0f0;
}

.user-item-phone {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.user-item-actions {
  flex: 1;
  display: flex;
  justify-content: center;
}

.action-btn {
  background-color: #f6f6f6;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}

.add-admin {
  background-color: #07c160;
  color: #fff;
}

.remove-admin {
  background-color: #ff4d4f;
  color: #fff;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.page-btn {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  margin: 0 20rpx;
  background-color: #f6f6f6;
}

.page-info {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

/* 主要按钮样式 */
.primary-btn {
  background-color: #07c160; /* 绿色背景 */
  color: white;
  border-radius: 30rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 90%;
  margin: 30rpx auto;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.primary-btn:active {
  background-color: #06ad56; /* 按下时的颜色 */
}

/* 用户操作区域 */
.user-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 20rpx 0;
} 